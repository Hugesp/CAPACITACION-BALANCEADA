@model IEnumerable<Entities.Models.Clientes>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col s10 offset-s1">
        <div class="card material-table">

            <div class="row valign-wrapper">
                <div class="col s6">
                    <span class="table-title">Clientes</span>
                </div>
                <div class="col s6">
                    <a id="btnAdd" onclick="AddEdit(0)" class="btn-floating waves-effect waves-light blue"> <i class="material-icons">add</i></a>
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    <table id="tblModel" class="mdl-data-table highlight" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Apellido Paterno</th>
                                <th>Apellido Materno</th>
                                <th>Fecha Nacimiento</th>
                                <th>RFC</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdCliente)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Apellidop)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Apellidom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaNacimiento)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rfc)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
<script>
    $(document).ready(function () {
        $('#tblModel').dataTable();
        $('select').formSelect();
    });
</script>
}
